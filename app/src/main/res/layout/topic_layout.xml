<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="30dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

  >

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewFront"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="50dp"
        android:backgroundTint="@color/colorAccent"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardPreventCornerOverlap="true"
        app:cardMaxElevation="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtTopic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/kgprimarypenmanship2"
            android:text="Topic"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:layout_marginTop="60dp"
            android:textSize="30sp" />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewBack"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="50dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardPreventCornerOverlap="true"
        app:cardMaxElevation="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnEasy"
                android:textAlignment="center"
                android:layout_width="wrap_content" android:layout_height="40dp"
                android:layout_marginStart="7dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/easy_btn_bg"
                android:onClick="onEasyButtonClick"
                android:tag="easy"
                android:text="Easy" />

            <Button
                android:id="@+id/btnMedium"
                android:layout_width="wrap_content" android:layout_height="40dp"
                android:layout_marginStart="7dp"

                android:background="@drawable/medium_btn_bg"
                android:onClick="onMediumButtonClick"
                android:tag="medium"
                android:text="Medium" />

            <Button
                android:id="@+id/btnHard"
                android:layout_width="wrap_content" android:layout_height="40dp"
                android:layout_marginStart="7dp"

                android:background="@drawable/hard_btn_bg"
                android:onClick="onHardButtonClick"
                android:tag="hard"
                android:text="Hard" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
