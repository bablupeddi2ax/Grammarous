<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Upper part -->
    <item>
        <rotate android:fromDegrees="60"
            android:pivotX="100%" android:pivotY="0%">
            <shape android:shape="rectangle">
                <solid android:color="#FF0000"/>
                <size android:width="100dp" android:height="100dp"/>
                <corners
                    android:topRightRadius="200dp"
                    android:topLeftRadius="500dp"
                    />
            </shape>
        </rotate>
    </item>

    <!-- Lower part -->
    <item android:top="150dp">
        <rotate android:fromDegrees="60" android:pivotX="150%" android:pivotY="20%">
            <shape android:shape="rectangle">
                <solid android:color="#FFF" />
                <corners android:radius="30dp"/>
                <size android:width="300dp" android:height="350dp"/>
                <padding android:bottom="20dp"/>
                <size android:width="100dp" android:height="150dp"/>
            </shape>
        </rotate>
    </item>

    <item android:top="150dp">
        <rotate android:fromDegrees="90"
            android:pivotX="100%" android:pivotY="150%">
            <shape android:shape="rectangle">
                <solid android:color="#FF0000"/>
                <size android:width="100dp" android:height="100dp"/>
                <corners android:radius="100dp"/>
            </shape>
        </rotate>
    </item>
</layer-list>

